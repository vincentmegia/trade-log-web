{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "awesomeTypeScriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist/js",
    "typings/main",
    "typings/main.d.ts"
  ]
}